# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'flowOfTheDay' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for flowOfTheDay
  pod 'Firebase/Core'
  pod 'Firebase/Auth'
  pod 'Firebase/AdMob'
  pod 'Firebase/Database'
  pod 'Firebase/Storage'
  pod 'ProgressHUD'
  pod 'Kingfisher', '~> 4.0'

  target 'flowOfTheDayTests' do
    inherit! :search_paths
    # Pods for testing
    pod 'Firebase/Core'
    pod 'Firebase/Auth'
    pod 'Firebase/AdMob'
  end

  target 'flowOfTheDayUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
